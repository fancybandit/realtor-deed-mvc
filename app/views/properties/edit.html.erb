<h1>Edit An Existing Property</h1>

<div class="form-container">
    <form action="/properties/<%= @property.id %>" method="post">
    <input type="hidden" id="hidden" name="_method" value="patch">
        <div class="form-group">
            <label for="address">Address:</label>
            <input type="text" id="address" name="property[address]" class="form-control" value="<%= @property.address %>" required>
        </div>
        <div class="form-group">
            <label for="price">Price:</label>
            <input type="number" id="price" name="property[price]" class="form-control" value="<%= @property.price %>" required>
        </div>
        <div class="form-group">
            <label for="date_sold">Date Sold:</label>
            <input type="date" id="date_sold" name="property[date_sold]" class="form-control" value="<%= @property.date_sold %>" required>
        </div>
        <div class="form-group">
            <label for="acreage">Acreage:</label>
            <input type="text" id="acreage" name="property[acreage]" class="form-control" value="<%= @property.acreage %>" required>
        </div>

        <button type="submit">Update Property</button>
    </form>
</div>
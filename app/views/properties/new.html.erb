<h1>Record A New Property</h1>

<div class="form-container">
    <form action="/properties" method="post">
        <div class="form-group">
            <label for="address">Address:</label>
            <input type="text" id="address" name="property[address]" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="price">Price:</label>
            <input type="number" id="price" name="property[price]" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="date_sold">Date Sold:</label>
            <input type="date" id="date_sold" name="property[date_sold]" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="acreage">Acreage:</label>
            <input type="text" id="acreage" name="property[acreage]" class="form-control" required>
        </div>

        <button type="submit">Create Property</button>
    </form>
</div>
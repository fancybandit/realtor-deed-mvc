<h1>Edit Your Account</h1>

<div class="form-container">
    <form action="/users/<%= user.id %>" method="post">
    <input type="hidden" id="hidden" name="_method" value="patch">
        <div class="form-group">
            <label for="name">Full Name:</label>
            <input type="text" id="name" name="user[name]" class="form-control" value="<%= user.name %>" required>
        </div>
        <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="user[username]" class="form-control" value="<%= user.username %>" required>
        </div>
        <div class="form-group">
            <label for="email">E-mail:</label>
            <input type="email" id="email" name="user[email]" class="form-control" value="<%= user.email %>" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="user[password]" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="password_confirmation">Confirm Password:</label>
            <input type="password" id="password_confirmation" name="user[password_confirmation]" class="form-control" required>
        </div>

        <button type="submit">Update Your Account</button>
    </form>
</div>
<h1>Edit An Existing Building</h1>

<div class="form-container">
    <form action="/buildings/<%= @building.id %>" method="post">
    <input type="hidden" id="hidden" name="_method" value="patch">
        <div class="form-group">
            <label for="address">Address:</label>
            <br>
            <% @properties.each do |property| %>
                <input type="radio" id="address" name="property[id]" value="<%= property.id %>" <%= "checked" if property == @building.property %> required><%= property.address %></input>
                <br>
            <% end %>
        </div>
        <div class="form-group">
            <label for="year_built">Year Built:</label>
            <input type="number" id="year_built" name="building[year_built]" class="form-control" value="<%= @building.year_built %>" required>
        </div>
        <div class="form-group">
            <label for="price">Price:</label>
            <input type="number" id="price" name="building[price]" class="form-control" value="<%= @building.price %>" required>
        </div>

        <button type="submit">Update Building</button>
    </form>
</div>
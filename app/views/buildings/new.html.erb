<h1>Record A New Building</h1>

<div class="form-container">
    <form action="/buildings" method="post">
        <div class="form-group">
            <label for="address">Address:</label>
            <br>
            <% @properties.each do |property| %>
                <input type="radio" id="address" name="property[id]" value="<%= property.id %>" required><%= property.address %></input>
                <br>
            <% end %>
        </div>
        <div class="form-group">
            <label for="year_built">Year Built:</label>
            <input type="number" id="year_built" name="building[year_built]" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="price">Price:</label>
            <input type="number" id="price" name="building[price]" class="form-control" required>
        </div>

        <button type="submit">Create Building</button>
    </form>
</div>